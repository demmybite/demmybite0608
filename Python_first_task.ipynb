    "from math import pi\n",
    "\n",
    "def area_of_circle():\n",
    "    radius = float(input(\"Enter the radius of the circle: \"))\n",
    "    \n",
    "     # area of a circle is (pi)*r-squared \n",
    "    area = pi*radius**2\n",
    "    \n",
    "    return print('The area of the circle is: ', area)"
   ]
